{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "String"
        },
        "rgLocation": {
            "defaultValue": "westeurope",
            "type": "String"
        },
        "amount": {
            "defaultValue": "100",
            "type": "String",
            "metadata": {
                "description": "The total amount of cost or usage to track with the budget"
            }
        },
        "timeGrain": {
            "defaultValue": "Annually",
            "allowedValues": [
                "Monthly",
                "Quarterly",
                "Annually"
            ],
            "type": "String",
            "metadata": {
                "description": "The time covered by a budget. Tracking of the amount will be reset based on the time grain."
            }
        },
        "startDate": {
            "type": "String",
            "metadata": {
                "description": "The start date must be first of the month in YYYY-MM-DD format. Future start date should not be more than three months. Past start date should be selected within the timegrain preiod."
            }
        },
        "firstThreshold": {
            "defaultValue": "30",
            "type": "String",
            "metadata": {
                "description": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0 and 1000."
            }
        },
        "secondThreshold": {
            "defaultValue": "50",
            "type": "String",
            "metadata": {
                "description": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0 and 1000."
            }
        },
        "thirdThreshold": {
            "defaultValue": "70",
            "type": "String",
            "metadata": {
                "description": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0 and 1000."
            }
        },
        "fourthThreshold": {
            "defaultValue": "90",
            "type": "String",
            "metadata": {
                "description": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0 and 1000."
            }
        },
        "fifthThreshold": {
            "defaultValue": "100",
            "type": "String",
            "metadata": {
                "description": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0 and 1000."
            }
        },
        "contactRoles": {
            "defaultValue": [
                "Owner",
                "Contributor",
                "Reader"
            ],
            "type": "Array",
            "metadata": {
                "description": "The list of contact roles to send the budget notification to when the threshold is exceeded."
            }
        },
        "contactEmails": {
            "defaultValue": [
                "youcef.oussama.teraa@devoteam.com",
                "guillaume.gobet@devoteam.com"
            ],
            "type": "Array",
            "metadata": {
                "description": "The list of email addresses to send the budget notification to when the threshold is exceeded."
            }
        },
        "TagEnv": {
            "type": "String"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('rgLocation')]",
            "tags": {
                "env": "[parameters('TagEnv')]",
                "RGName": "[parameters('rgName')]"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "Assignment_deploy",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Authorization/policyAssignments",
                            "apiVersion": "2019-09-01",
                            "name": "tag_policy_rgname",
                            "location": "westeurope",
                            "identity": {
                                "type": "SystemAssigned"
                            },
                            "properties": {
                                "scope": "[[concat(subscription().id, '/resourcegroups/', resourceGroup().name )]",
                                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
                                "parameters": {
                                    "tagName": {
                                        "value": "RGName"
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Authorization/policyAssignments",
                            "apiVersion": "2019-09-01",
                            "name": "tag_policy_env",
                            "location": "westeurope",
                            "identity": {
                                "type": "SystemAssigned"
                            },
                            "properties": {
                                "scope": "[[concat(subscription().id, '/resourcegroups/', resourceGroup().name )]",
                                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
                                "parameters": {
                                    "tagName": {
                                        "value": "env"
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Authorization/policyAssignments",
                            "apiVersion": "2019-09-01",
                            "name": "allowed_location_policy_assignement",
                            "properties": {
                                "scope": "[[concat(subscription().id, '/resourcegroups/', resourceGroup().name )]",
                                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
                                "parameters": {
                                    "listOfAllowedLocations": {
                                        "value": [
                                            "northeurope",
                                            "westeurope",
                                            "europe"
                                        ]
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Consumption/budgets",
                            "apiVersion": "2019-10-01",
                            "name": "[concat('budget_', parameters('rgName'))]",
                            "properties": {
                                "timePeriod": {
                                    "startDate": "[parameters('startDate')]"
                                },
                                "timeGrain": "[parameters('timeGrain')]",
                                "amount": "[parameters('amount')]",
                                "category": "Cost",
                                "notifications": {
                                    "NotificationForExceededBudget1": {
                                        "enabled": true,
                                        "operator": "GreaterThan",
                                        "threshold": "[parameters('firstThreshold')]",
                                        "contactEmails": "[parameters('contactEmails')]",
                                        "contactRoles": "[parameters('contactRoles')]"
                                    },
                                    "NotificationForExceededBudget2": {
                                        "enabled": true,
                                        "operator": "GreaterThan",
                                        "threshold": "[parameters('secondThreshold')]",
                                        "contactEmails": "[parameters('contactEmails')]",
                                        "contactRoles": "[parameters('contactRoles')]"
                                    },
                                    "NotificationForExceededBudget3": {
                                        "enabled": true,
                                        "operator": "GreaterThan",
                                        "threshold": "[parameters('thirdThreshold')]",
                                        "contactEmails": "[parameters('contactEmails')]",
                                        "contactRoles": "[parameters('contactRoles')]"
                                    },
                                    "NotificationForExceededBudget4": {
                                        "enabled": true,
                                        "operator": "GreaterThan",
                                        "threshold": "[parameters('fourthThreshold')]",
                                        "contactEmails": "[parameters('contactEmails')]",
                                        "contactRoles": "[parameters('contactRoles')]"
                                    },
                                    "NotificationForExceededBudget5": {
                                        "enabled": true,
                                        "operator": "GreaterThan",
                                        "threshold": "[parameters('fifthThreshold')]",
                                        "contactEmails": "[parameters('contactEmails')]",
                                        "contactRoles": "[parameters('contactRoles')]"
                                    }
                                }

                            }
                        }
                    ],
                    "outputs": {}
                }
            },
            "resourceGroup": "[parameters('rgName')]"
        }
    ]
}
